# --- PATHS ---
PROJECT_ROOT=/users/<user>/meditron-4/
STORAGE_ROOT=/capstor/store/cscs/swissai/<a000>
ENV=/users/<user>/.edf/new_axolotl.toml
USER_STORAGE=/iopsstor/scratch/cscs/<user>/
USER=<user>

# --- SECRETS ---
# Keep your existing values here (do not re-paste them publicly)
WANDB_API_KEY=<WANDB_API_KEY>
HF_TOKEN=<HF_TOKEN>
SLACK_WEBHOOK_URL=<SLACK_WEBHOOK_URL> #optional

# --- CONFIGS ---
WANDB_PROJECT=<WANDB_PROJECT>
WANDB_ENTITY=<WANDB_ENTITY>
export WANDB_DIR="$USER_STORAGE/wandb"

# =============================================================================
# NODE-LOCAL CACHES (avoid NFS / shared filesystem)
# Prefer SLURM_TMPDIR (node-local), fallback to /tmp.
# Namespacing by job id avoids collisions when multiple jobs run on same node.
# =============================================================================
export CACHE_ROOT="$USER_STORAGE/axolotl-cache/${SLURM_JOB_ID:-nojob}"

export HF_HOME="$CACHE_ROOT/hf"


